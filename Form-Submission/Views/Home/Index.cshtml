@model Form_Submission.Models.User

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/style_index.css"/>

<div class="container form">
    <h1>Enter your information:</h1>
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="FName"></span>
            <label asp-for="FName">First Name:</label> 
            <input type="text" asp-for="FName" class="form-control"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="LName"></span>
            <label asp-for="LName">Last Name:</label> 
            <input type="text" asp-for="LName" class="form-control"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="Age"></span>
            <label asp-for="Age">Age:</label> 
            <input type="text" asp-for="Age" class="form-control"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email Address:</label> 
            <input type="email" asp-for="Email" class="form-control"/>
        </div>
        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Password:</label> 
            <input type="text" asp-for="Password" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-dark submit">Submit</button>
    </form>
</div>